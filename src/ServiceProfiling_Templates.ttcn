module ServiceProfiling_Templates {
  import from ServiceProfiling_Types all;

  template ResourceConfigurations rcfg := {
    { function_id := "snort_vnf",
      cpu_time := "${0.1 to 1.0 step 0.1}",
      cpu_set := "0",
      max_mem := "${64, 128, 256}"}
  };

  template MeasuringPointVNFs mpvnf := {
    { name := "client",
      connection_point := "snort_vnf:input",
      image := "sonatanfv/sonata-iperf3-vnf",
      cmd := "iperf -c iperf-server"},
    { name := "server",
      connection_point := "snort_vnf:output",
      image := "sonatanfv/sonata-iperf3-vnf",
      cmd := "iperf -s"}
  };

  template ServiceProfilingExperiment spexperiment := {
    name := "serviceprofiling1",
    repetitions := 10,
    profiling_timeout := 300,
    service_name := "sonata-snort-service.son",
    resourcecfgs := rcfg, MpVNFs := mpvnf  
  };
  
}
